---
interface Props {
  title: string
  description: string
  link: string
  github: string[]
  image: string
  tags: {
    name: string
    class: string
    icon: (_props: Record<string, any>) => any
  }[]
}

const { title, description, link, github, image, tags } = Astro.props
---

<article>
  <h3 class="text-2xl font-semibold text-purple-700 mb-2">{title}</h3>
  <p class="text-lg mb-4 text-pretty">{description}</p>
  <ul class="flex gap-x-2 flex-row mb-4">
    {
      tags.map((tag) => (
        <li>
          <span
            class={`flex items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
          >
            <tag.icon class="size-5" />
            {tag.name}
          </span>
        </li>
      ))
    }
  </ul>
  <a
    class="group relative flex flex-col overflow-hidden rounded-lg flex-grow shadow-2xl shadow-white/10"
    href={link}
  >
    <img
      src={image}
      alt={`Screenshot from project: ${title}`}
      class="object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out"
    />
  </a>
</article>
