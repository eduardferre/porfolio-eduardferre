---
import Layout from '@/layouts/Layout.astro'

import AboutMe from '@/components/AboutMe.astro'
import Badge from '@/components/Badge.astro'
import BriefcaseIcon from '../icons/BriefcaseIcon.astro'
import CodeIcon from '../icons/CodeIcon.astro'
import Experience from '../components/Experience.astro'
import GitHubIcon from '../icons/GitHubIcon.astro'
import GmailIcon from '../icons/GmailIcon.astro'
import LinkedInIcon from '@/icons/LinkedInIcon.astro'
import ProfileIcon from '@/icons/ProfileIcon.astro'
import Projects from '../components/Projects.astro'
import SectionContainer from '../components/SectionContainer.astro'
import SocialBadge from '../components/SocialBadge.astro'
---

<Layout
  title="Eduard Ferré - Software Engineer"
  description="Eduard Ferré's portfolio"
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <div class="flex flex-row items-center gap-x-4 mb-6">
        <img
          class="rounded-full size-16"
          src="/profileImage.png"
          alt="Eduard Ferré avatar"
        />
        <a
          target="_blank"
          rel="noopener noreferrer"
          role="link"
          href="https://linkedin.com/in/eduardferre"
          class="flex justify-center items-center ml-2"
        >
          <Badge>I'm Open to Work</Badge>
        </a>
      </div>
      <div
        class="text-white text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-2 pb-4 lg:pb-10"
      >
        Hello, I'm<span class="text-purple-800">Eduard Ferré</span>
      </div>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[800px]">
        +1 año de experiencia profesional. Ingeniero de Software. De Girona pero
        actualmente viviendo en Madrid cursando el máster de Big Data Analytics
        de la UC3M. Soy un entusiasmado en aprender análisi de datos y
        solucionar problemas de la vida cuotidiana mediante la programación.
      </h2>

      <nav class="flex flex-wrap gap-x-4 gap-y-2 mt-4">
        <SocialBadge href="https://linkedin.com/in/eduardferre">
          <LinkedInIcon class="size-4 lg:size-6" />
          LinkedIn
        </SocialBadge>
        <SocialBadge href="https://github.com/eduardferre">
          <GitHubIcon class="size-4 lg:size-6" />
          GitHub
        </SocialBadge>
        <SocialBadge href="mailto:eduardferresanchez@gmail.com">
          <GmailIcon class="size-4 lg:size-6" />
          eduardferresanchez@gmail.com
        </SocialBadge>
      </nav>
    </SectionContainer>
    <div class="space-y-36">
      <SectionContainer id="experience">
        <h2
          class="text-2xl md:text-3xl font-semibold mb-6 flex flex-row gap-x-4 items-center"
        >
          <BriefcaseIcon class="size-6 md:size-7" /> Job Experience
        </h2>
        <Experience />
      </SectionContainer>
      <SectionContainer id="projects">
        <h2
          class="text-2xl md:text-3xl font-semibold mb-6 flex flex-row gap-x-4 items-center"
        >
          <CodeIcon class="size-6 md:size-7" /> Projects
        </h2>
        <Projects />
      </SectionContainer>

      <SectionContainer id="about-me">
        <h2
          class="text-2xl md:text-3xl font-semibold mb-6 flex flex-row gap-x-4 items-center"
        >
          <ProfileIcon class="size-6 md:size-7" /> About Me
        </h2>

        <AboutMe />
      </SectionContainer>
    </div>
  </main>
</Layout>
